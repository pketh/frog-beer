secondary = #858585

html
  font-size: 62.5%
  background-color: black
  color: white
  font-family: menlo

body
  font-size: 1.6rem
  max-width: 800px
  padding-left: 2rem
  padding-right: 2rem
  margin-left: auto
  margin-right: auto

a
  color: white
  text-decoration: none

a.primary
  border-bottom: 1px white solid
  padding-bottom: 6px
  transition: all .1s
  &:hover
    padding-bottom: 4px

section,
footer
  margin-bottom: 8rem

h2
  font-weight: normal
  color: secondary
  font-size: 1.6rem
  margin-bottom: 0.4rem

ul
  padding-left: 0

li
  list-style: none
  img
    image-rendering: crisp-edges
    image-rendering: pixelated

footer
  p
    margin-bottom: 2rem
  a
    color: secondary
    border-bottom: 1px secondary solid
    &:hover
      border-bottom: none
