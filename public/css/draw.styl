.instructions-list
  margin-top: 0
  li
    font-family: plantin
    font-style: italic
    font-size: 2rem
    line-height: 2.4rem
  a
    text-decoration: underline
    &:hover
      opacity: 0.7

section.this-week
  .topic
    font-size: 4.0rem
    line-height: 4.5rem


section.draw-intro
  margin-bottom: 6rem

section.draw
  margin-bottom: 4rem

palette-color-medium = 34px
palette-color-small = 22px

section.palette
  margin-bottom: 4rem
  .color
    display: inline-block
    list-style-type: none
    margin-right: 1rem
    width: palette-color-medium
    height: palette-color-medium
    border-radius: 100px
    border: 4px solid black
    transition: all 0.1s
    cursor: pointer
    &:hover
      opacity: 0.8
    @media(max-width: 400px)
      width: palette-color-small
      height: palette-color-small
  .active
    border-color: white
    &:hover
      opacity: 1
  .blank
    position: relative
    background-color: black
  .blank:before
    content: " ";
    position: absolute;
    border-radius: 100px
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    border: 2px solid secondary;
  .white
    background-color: white
  .shuffle
    background-color: transparent
    width: auto
    vertical-align: 80%
    color: secondary
    @media(max-width: 400px)
      vertical-align: 45%

pixel-size-large = 28px
pixel-size-medium = 24px
pixel-size-small = 18px
pixel-size-micro = 15px

section.drawing
  margin-left: 0.5rem
  margin-bottom: 2rem
  cursor: pointer
  display: inline-block
  .row
    overflow: auto
    user-select: none
  .pixel:last-child
    border-right: 1px tertiary solid
  :last-child .pixel
      border-bottom: 1px tertiary solid
  .pixel
    width: pixel-size-large
    height: pixel-size-large
    display: inline-block
    border-top: 1px tertiary solid
    border-left: 1px tertiary solid
    @media(max-width: 680px)
      width: pixel-size-medium
      height: pixel-size-medium
    @media(max-width: 570px)
      width: pixel-size-small
      height: pixel-size-small
    @media(max-width: 400px)
      width: pixel-size-micro
      height: pixel-size-micro

#canvas
  margin-top: 1em
  margin-bottom: 3rem
  width: 100%
  max-width: 400px

section.save-drawing,
section.drawing-saved,
section.drawing-saved-without-user
  margin-bottom: 0rem

  .primary-button
    display: inline-block
    border: 2px white solid
    border-radius: 5px
    padding: 10px
    user-select: none
    cursor: pointer
    &:hover
      background-color: rgba(255,255,255,0.2)
    &:active
      background-color: rgba(255,255,255,0.4)

  .saved-notice
    background-color: white
    color: black
    display: inline-block
    padding: 6px 10px
    border-radius: 5px

  .saved-message
    max-width: 500px
    line-height: 2.4rem

section.tips
  color: secondary
  img,
  p
    display: inline-block
  .keys-icon
    vertical-align: text-bottom
    padding-right: 10px

section.last-week
  .topic
    font-size: 3.2rem
    line-height: 3.6rem
  li
    display: inline-block
  .art
    margin-right: 1.5rem
    padding-bottom: 1.5rem
