section.draw-intro
  margin-bottom: 6rem

section.draw
  margin-bottom: 4rem

section.palette
  margin-bottom: 4rem
  .color
    display: inline-block
    list-style-type: none
    margin-right: 1rem
    width: 34px
    height: 34px
    border-radius: 100px
    border: 4px solid black
    transition: all 0.1s
    cursor: pointer
    &:hover
      opacity: 0.8
  .active
    border-color: white
    &:hover
      opacity: 1
  .blank
    position: relative
    background-color: black
  .blank:before
    content: " ";
    position: absolute;
    border-radius: 100px
    top: 0px;
    left: 0px;
    right: 0px;
    bottom: 0px;
    border: 2px solid secondary;
  .white
    background-color: white
  .shuffle
    background-color: transparent
    width: auto
    vertical-align: 80%
    color: secondary

section.drawing
  margin-left: 0.5rem
  cursor: pointer
  .row
    overflow: auto
    user-select: none
  .pixel:last-child
    border-right: 1px tertiary solid
  :last-child .pixel
      border-bottom: 1px tertiary solid
  .pixel
    width: 28px
    height: 28px
    display: inline-block
    border-top: 1px tertiary solid
    border-left: 1px tertiary solid
