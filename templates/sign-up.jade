extends index

block content
  section.signup
    h1 ribbit
    p.intro Welcome, friend of frogs.
    form.sign-up(action='/sign-up' method='post')
      input(name='email' placeholder='email' type='email' maxlength='100')
      input(name='nickname' placeholder='nickname' type='text' maxlength='100')
      input(value='submit' type='submit' class='submit')
    p.sign-up-in
      a(href="#" class="secondary-link") or Sign in
