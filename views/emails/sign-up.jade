// from: Frog Beer

- frog = "https://s3.amazonaws.com/frog-beer/frog.png"
- frog2x = "https://s3.amazonaws.com/frog-beer/frog2x.png"

if !nickname
  - nickname = 'friend'

doctype html
html
  head
    title= subject
    meta(name='viewport' width='device-width' initial-scale='1')
    meta(http-equiv='Content-Type' content='text/html' charset='UTF-8')
    style
      include ../../public/css/emails.css
  body

    header
      a(href=url)
        img(src=frog srcset="#{frog2x} 2x")

    section.content
      p= 'Dear '
        span.nickname= nickname + ','

      p We are pleased to inform you that you have a place at the Frog Beer School of Pixels and Wizardry:

    section.actions
      a(href=signUpUrl class='link') Confirm your account

    section.sign-off
      p Yours sincerely,
